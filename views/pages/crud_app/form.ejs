<!doctype html>
<html lang="en">

<head>
    <%- include('./componants/head.ejs'); %>
    <style>

table {
    /* margin : 20px;  */
    padding: 20px;
    /* border: 1px dotted rgba(49, 47, 47, 0.753); */
}

td {
    padding: 5px;
}

textarea {
    resize: none;
    height: 100px;
}

input {
    margin-right: 30px;
}

input[type="radio"] {
    margin: 5px;
}

input[type="checkbox"] {
    margin: 10px;
}

fieldset {
    margin-top: 23px;
    margin-left: 23px;
    border: 1px solid gray;
    padding: 20px;
}

legend {
    display: unset !important;
    width: auto !important;
    margin-bottom: unset !important;
    font-size: unset !important;
    color: inherit;
    white-space: normal;
}

span[id^=error_]{
    color: red;
    font-size: 15px;
}
body > form:nth-child(3) > fieldset:nth-child(7) {
margin-right: 340px;
}
    </style>
</head>

<body>

    <%- include('./componants/header.ejs'); %>

        <center>
            <h1>Job Application Form</h1>
        </center>
        <form action="/task/form" method="post" style="display: flex; flex-wrap: wrap;" onsubmit="return validateForm()">
            <%/* basic detail */%>
            <fieldset>
                <legend>Basic Detail</legend>
                <table>
                    <tr>
                        <td>First Name :</td>
                        <td>
                            <input type="text" name="first_name" id="first_name"> <br>
                            <span id="error_first_name"></span>
                        </td>
                        <td>Last Name :</td>
                        <td>
                            <input type="text" name="last_name" id="last_name"> <br>
                            <span id="error_last_name"></span>
                        </td>
                    </tr>

                    <tr>
                        <td>Designation :</td>
                        <td><input type="text" name="designation" id="designation"> <br>
                            <span id="error_designation"></span>
                        </td>
                        <td>Email :</td>
                        <td> <input type="email" name="email" id="email"> <br>
                            <span id="error_email"></span>
                        
                        </td>

                    </tr>

                    <tr>
                        <td>Address 2 :</td>
                        <td><textarea name="address1" id="address1" cols="30" rows="10"></textarea> <br>
                            <span id="error_address1"></span>
                        
                        </td>
                        <td>Address 1 :</td>
                        <td><textarea name="address2" id="" cols="30" rows="10"></textarea></td>
                    </tr>

                    <tr>
                        <td>Phone Number :</td>
                        <td> <input type="text" name="mobile_number" id="mobile_number"> <br>
                            <span id="error_mobile_number"></span>
                            
                        </td>
                        <td>State : </td>
                        <td>
                            <select name="state" id="state">
                                <option value="">select option ....</option>
                                <option value="gujarat">GUJARAT</option>
                                <option value="up">UP</option>
                                <option value="punjab">PUNJAB</option>
                            </select> <br>
                            <span id="error_state"></span>

                        </td>
                    </tr>

                    <tr>
                        <td>City :</td>
                        <td>
                            <select name="city" id="city">
                                <option value="">select option ....</option>
                                <option value="ahemdabad">Ahemdabad</option>
                                <option value="bhavnagar">Bhavnagar</option>
                                <option value="surat">Surat</option>
                            </select> <br>
                            <span id="error_city"></span>

                        </td>
                        <td>Zip Code : </td>
                        <td><input type="number" name="zip_code" id="zip_code" min="0">
                        
                            <br><span id="error_zip_code"></span>
                        
                        </td>
                    </tr>

                    <tr>
                        <td>Gender :</td>
                        <td>
                            <input type="radio" name="gender" value="male" id="" class="gender">Male 
                            <input type="radio" name="gender" value="female" id="" class="gender">Female <br>
                            <span id="error_gender"></span>
                        
                        </td>
                        <td>Relation Status :</td>
                        <td>
                            <select name="relationship_status" id="relationship_status">
                                <option value="">select option ....</option>
                                <option value="Single">Single</option>
                                <option value="Married">Married</option>
                            </select> <br>
                            <span id="error_relationship_status"></span>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="">Date of Birth</td>
                        <td colspan="2"><input type="date" name="dob" id="dob">
                            <br><span id="error_dob"></span>
                        
                        </td>
                    </tr>
                </table>
            </fieldset>

            <%/* Education Detail */%>
            <fieldset>
                <legend>Education Detail</legend>
                <table>
                    <tr>
                        <td><b>SSC Result</b></td>
                    </tr>
                    <tr>
                        <td>Name Of board : </td>
                        <td><input type="text" name="university[]" id="ssc_board">
                            <br><span id="error_ssc_board"></span>
                        </td>
                        <td>Passing Year :</td>
                        <td><input type="text" name="year[]" id="ssc_year">
                            <br><span id="error_ssc_year"></span>
                        </td>
                        <td>Percentage :</td>
                        <td><input type="number" name="percentage[]" id="ssc_percentage">
                            <br><span id="error_ssc_percentage"></span>
                        </td>
                        <td> <input type="hidden" name="course[]" value="ssc"> </td>
                        <td> </td>
                    </tr>

                    <tr>
                        <td colspan="8">
                            <hr>
                        </td>
                    </tr>

                    <tr>
                        <td><b>HSC/Diploma Result</b></td>
                    </tr>
                    <tr>
                        <td>Name Of board : </td>
                        <td><input type="text" name="university[]" id="hsc_board">
                            <br><span id="error_hsc_board"></span>
                        </td>
                        <td>Passing Year :</td>
                        <td><input type="number" name="year[]" id="hsc_year">
                            <br><span id="error_hsc_year"></span>
                        </td>
                        <td>Percentage :</td>
                        <td><input type="number" name="percentage[]" id="hsc_percentage">
                            <br><span id="error_hsc_percentage"></span>
                        </td>
                        <td><input type="hidden" name="course[]" value="hsc/diploma">  </td>
                        <td> </td>
                    </tr>

                    <tr>
                        <td colspan="8">
                            <hr>
                        </td>
                    </tr>

                    <tr>
                        <td><b>Bachelor Degree</b></td>
                    </tr>
                    <tr>
                        <td>Course Name: </td>
                        <td><input type="text" name="course[]" id="course_name">
                            <br><span id="error_course_name"></span>
                        </td>
                        <td>University :</td>
                        <td><input type="text" name="university[]" id="university">
                            <br><span id="error_university"></span>
                        </td>
                        <td>Passing Year :</td>
                        <td><input type="number" name="year[]" id="bachelor_year">
                            <br><span id="error_bachelor_year"></span>
                        </td>
                        <td>Percentage :</td>
                        <td><input type="number" name="percentage[]" id="bachelor_percentage">
                            <br><span id="error_bachelor_percentage"></span>
                        </td>
                    </tr>

                    <tr>
                        <td colspan="8">
                            <hr>
                        </td>
                    </tr>

                    <tr>
                        <td><b>Master Degree</b></td>
                    </tr>
                    <tr>
                        <td>Course Name: </td>
                        <td><input type="text" name="course[]" id=""></td>
                        <td>University :</td>
                        <td><input type="text" name="university[]" id=""></td>
                        <td>Passing Year :</td>
                        <td><input type="number" name="year[]" id=""></td>
                        <td>Percentage :</td>
                        <td><input type="number" name="percentage[]" id=""></td>
                    </tr>
                </table>
            </fieldset>

            <%/* Work Experience Detail */%>
            <fieldset>
                <legend>Work Experience</legend>
                <table id="exp_table">
                    <tr>
                        <td>Company Name :</td>
                        <td><input type="text" name="company_name[]" id="company_name1" onchange="disableinputExp(1)">
                            <br><span id="error_company_name1"></span>
                        </td>
                        <td>Designation :</td>
                        <td><input type="text" name="designationc[]" id="designation1">
                            <br><span id="error_designation1"></span>
                        </td>
                        <td>From :</td>
                        <td><input type="date" name="fromdate[]" id="fromdate1">
                            <br><span id="error_fromdate1"></span>
                        </td>
                        <td>To :</td>
                        <td><input type="date" name="todate[]" id="todate1">
                            <br><span id="error_todate1"></span>
                        </td>
                    </tr>

                    <tr>
                        <td>Company Name :</td>
                        <td><input type="text" name="company_name[]" id="company_name2" onchange="disableinputExp(2)">
                            <br><span id="error_company_name2"></span>
                        </td>
                        <td>Designation :</td>
                        <td><input type="text" name="designationc[]" id="designation2">
                            <br><span id="error_designation2"></span>
                        </td>
                        <td>From :</td>
                        <td><input type="date" name="fromdate[]" id="fromdate2">
                            <br><span id="error_fromdate2"></span>
                        </td>
                        <td>To :</td>
                        <td><input type="date" name="todate[]" id="todate2">
                            <br><span id="error_todate2"></span>
                        </td>
                    </tr>
                    

                </table>
                <button type="button" id="addExp" onclick="AddExp()">Add More</buuton>
                <button type="button" id="addExp" onclick="RemoveExp()">Remove</buuton>

            </fieldset>

            <%/* Language Know */%>
            <fieldset>
                <legend>Language Know</legend>
                <table>
                    <tr>
                        <td><input type="checkbox" name="language[]" value="hindi" id="hindi" onchange="disableCheckbox(event)">Hindi</td>
                        <td><input type="checkbox" name="hindi_level[]" value="read" id="hindi_read" disabled>read</td>
                        <td><input type="checkbox" name="hindi_level[]" value="Write" id="hindi_write" disabled>Write</td>
                        <td><input type="checkbox" name="hindi_level[]" value="Speak" id="hindi_speak" disabled>Speak</td>
                    </tr>

                    <tr>
                        <td><input type="checkbox" name="language[]" value="english" id="english" onchange="disableCheckbox(event)">English</td>
                        <td><input type="checkbox" name="english_level[]" value="read" id="english_read" disabled>read</td>
                        <td><input type="checkbox" name="english_level[]" value="Write" id="english_write" disabled>Write</td>
                        <td><input type="checkbox" name="english_level[]" value="Speak" id="english_speak" disabled>Speak</td>
                    </tr>

                    <tr>
                        <td><input type="checkbox" name="language[]" value="gujarati" id="gujarati" onchange="disableCheckbox(event)">Gujarati</td>
                        <td><input type="checkbox" name="gujarati_level[]" value="read" id="gujarati_read" disabled>read</td>
                        <td><input type="checkbox" name="gujarati_level[]" value="Write" id="gujarati_write" disabled>Write</td>
                        <td><input type="checkbox" name="gujarati_level[]" value="Speak" id="gujarati_speak" disabled>Speak</td>
                    </tr>
                </table>
            </fieldset>

            <%/* Technologies you Know */%>
            <fieldset>
                <legend>Technologies you Know</legend>
                <table>
                    <tr>
                        <td><input type="checkbox" name="technologies[]" value="php" id="php" onchange="disableCheckbox(event)">PHP</td>
                        <td><input type="radio" name="php_level" value="beginer" id="php_beginer" disabled> Beginer</td>
                        <td><input type="radio" name="php_level" value="mideator" id="php_mideator" disabled> Mideator</td>
                        <td><input type="radio" name="php_level" value="expert" id="php_expert" disabled> Expert</td>
                    </tr>

                    <tr>
                        <td><input type="checkbox" name="technologies[]" value="mysql" id="mysql" onchange="disableCheckbox(event)">Mysql</td>
                        <td><input type="radio" name="mysql_level" value="beginer" id="mysql_beginer" disabled> Beginer</td>
                        <td><input type="radio" name="mysql_level" value="mideator" id="mysql_mideator" disabled> Mideator</td>
                        <td><input type="radio" name="mysql_level" value="expert" id="mysql_expert" disabled> Expert</td>
                    </tr>

                    <tr>
                        <td><input type="checkbox" name="technologies[]" value="laravel" id="laravel" onchange="disableCheckbox(event)">laravel</td>
                        <td><input type="radio" name="laravel_level" value="beginer" id="laravel_beginer" disabled> Beginer</td>
                        <td><input type="radio" name="laravel_level" value="mideator" id="laravel_mideator" disabled> Mideator</td>
                        <td><input type="radio" name="laravel_level" value="expert" id="laravel_expert" disabled> Expert</td>
                    </tr>

                    <tr>
                        <td><input type="checkbox" name="technologies[]" value="oracle" id="oracle" onchange="disableCheckbox(event)">Oracle</td>
                        <td><input type="radio" name="oracle_level" value="beginer" id="oracle_beginer" disabled> Beginer</td>
                        <td><input type="radio" name="oracle_level" value="mideator" id="oracle_mideator" disabled> Mideator</td>
                        <td><input type="radio" name="oracle_level" value="expert" id="oracle_expert" disabled> Expert</td>
                    </tr>
                </table>

            </fieldset>

            <%/* Referance Contact */%>
            <fieldset>
                <legend>Referance Contact</legend>
                <table id="ref_table">
                    <tr>
                        <td>Name :</td>
                        <td><input type="text" name="referance_name[]" id="ref_name_1" onchange="disableinputRef(1)">
                        <br><span id="error_ref_name_1"></span></td>
                        <td>Contact Number :</td>
                        <td><input type="number" name="referance_contact_number[]" id="ref_contact_1">
                        <br><span id="error_ref_contact_1"></span></td>
                        <td>Relation :</td>
                        <td><input type="text" name="referance_relation[]" id="ref_relation_1">
                        <br><span id="error_ref_relation_1"></span></td>
                    </tr>

                    <tr>
                        <td>Name :</td>
                        <td><input type="text" name="referance_name[]" id="ref_name_2" onchange="disableinputRef(2)">
                        <br><span id="error_ref_name_2"></span></td>
                        <td>Contact Number :</td>
                        <td><input type="number" name="referance_contact_number[]" id="ref_contact_2">
                        <br><span id="error_ref_contact_2"></span></td>
                        <td>Relation :</td>
                        <td><input type="text" name="referance_relation[]" id="ref_relation_2">
                        <br><span id="error_ref_relation_2"></span></td>
                    </tr>
                </table>
                <button type="button" id="addExp" onclick="AddRef()">Add More</button>
                <button type="button" id="addExp" onclick="RemoveRef()">Remove</button>
            </fieldset>

            <%/* Preferances */%>
            <fieldset>
                <legend>Preferances</legend>
                <table>
                    <tr>
                        <td>Preferd Location :</td>
                        <td>
                            <select name="preferd_location" id="preferd-location">
                                <option value="">select option</option>
                                <option value="Ahemdabad">Ahemdabad</option>
                                <option value="Bhavnagar">Bhavnagar</option>
                                <option value="Delhi">Delhi</option>
                            </select>
                            <br> <span id="error_preferd-location"></span>
                        </td>
                        <td>Notice period :</td>
                        <td><input type="text" name="notice_period" id=""></td>
                        <td>Department : </td>
                        <td>
                            <select name="department" id="department">
                                <option value="">select option</option>
                                <option value="Development">Development</option>
                                <option value="Design">Design</option>
                                <option value="Marketing">Marketing</option>
                            </select> <br>
                            <span id="error_department"></span>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>Expacted CTC :</td>
                        <td><input type="number" name="expacted_ctc" id="expacted_ctc">
                        <br><span id="error_expacted_ctc"></span></td>
                        <td></td>
                        <td></td>
                    </tr>

                    <tr>
                        <td></td>
                        <td></td>
                        <td>Current CTC :</td>
                        <td><input type="number" name="current_ctc" id="current_ctc">
                            <br><span id="error_current_ctc"></span>
                        </td>
                        <td></td>
                        <td></td>
                    </tr>
                </table>
            </fieldset>
            
            <input type="submit" value="submit" style="font-size: 20px; padding: 5px 22px; margin: 30px 1588px;">
        </form>

        <%- include('./componants/script.ejs'); %>

</body>

<script src="/crud_app/script.js"></script>

</html>