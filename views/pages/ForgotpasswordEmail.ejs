<!doctype html>
<html lang="en">
  <head>
    <%- include('../componants/head.ejs'); %>
  </head>
  <body>

    <%- include('../componants/header.ejs'); %>

    <div class="container">
        <div class="reg-box mt-5" style="max-width: 500px; margin: auto;">
            <h2 class="text-center text-primary mb-5" >Forgot Password</h2>
            <form class="form" id="forgotpassword-form">
                <div class="form-row">
                    <div class="form-group col-md-9">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Enter Email">
                    </div>
                    <div class="form-group col-md-3">
                        <button type="button" id="forgot-btn" class="btn btn-primary mb-2" onclick="forgotpassword()">Get Link</button>
                    </div>
                </div>
                <div class="alert alert-info" role="alert" id="alert">
                    <a href=""></a>
                </div>
            </form>
        </div>
    </div>
    <script src="JS/registationscript.js"></script>
    <%- include('../componants/script.ejs'); %>
  </body>
</html>



