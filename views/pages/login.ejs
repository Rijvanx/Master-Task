<!doctype html>
<html lang="en">
  <head>
    <%- include('../componants/head.ejs'); %>
  </head>
  <body>

    <%- include('../componants/header.ejs'); %>

    <div class="container">
      <h2 class="text-center text-primary mt-5">Login</h2>
      <div class="reg-box mt-4" style="max-width: 500px; margin: auto;">
        <form id="login-form">
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" placeholder="email" class="form-control" name="email" id="email">
            <span class="error" id="error_email"></span>
          </div>
          <div class="form-group">
            <label for="">Password</label>
            <input type="password" name="password" placeholder="password" class="form-control" id="password">
            <span class="error" id="error_password"></span>
          </div>
          <div class="form-group">
             <a href="/forgotpassword" target="_blank" class="float-right" rel="noopener noreferrer">Forgot Password ?</a>
          </div>

          <button type="button" class="btn btn-primary mt-4 mb-4" onclick="login()" id="login-btn">Login</button>
          <div class="alert alert-info" role="alert" id="alert-login">
            <a href=""></a>
        </div>
        </form>
      </div>
    </div>


    <%- include('../componants/script.ejs'); %>
   <script src="JS/registationscript.js"></script>
   
  </body>
</html>
